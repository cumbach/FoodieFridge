<div class="first-page">

  <h2 class="log-title">Sign Up</h2>
  <form action="<%= users_url %>" method="post">
    <%= render 'shared/auth' %>

    <div class="form-group">
      <label for="username"></label>
      <input type="text" name="user[username]" id='username' placeholder="username" value="<%= @user.username %>">
    </div>

    <div class="form-group">
      <label for="password"></label>
      <input type="password" name="user[password]" id='password' placeholder="password" value="<%= @user.password %>">
    </div>

    <input type="submit" value="Sign Up">

  </form>
  <br/>
  <h6>Already have an account? <%= link_to "Sign in here", new_session_url %><h6>

</div>
